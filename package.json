{
	"name": "email-typo-fixer",
	"version": "1.0.2",
	"description": "A TypeScript library that fixes common email typos and formatting issues",
	"author": "Patrick Ullrich",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Patrick-Ullrich/email-typo-fixer.git"
	},
	"keywords": [
		"email",
		"typo",
		"fixer",
		"correction",
		"validation",
		"typescript"
	],
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": ["dist", "README.md", "LICENSE"],
	"scripts": {
		"lint": "biome check .",
		"lint:ci": "biome ci .",
		"lint:fix": "biome check . --write --unsafe",
		"build": "tsup src/index.ts --format esm,cjs --dts --minify --treeshake --clean --sourcemap",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"prepublishOnly": "bun run build"
	},
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest",
		"tsup": "^8.3.5"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
